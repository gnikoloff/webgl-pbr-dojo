{
  "name": "webgl-pbr-dojo",
  "private": true,
  "version": "0.0.1",
  "description": "Explore physically based rendering with WebGL2",
  "author": {
    "email": "nikoloffgeorgi@gmail.com",
    "name": "Georgi Nikolov",
    "url": "https://georgi-nikolov.com"
  },
  "scripts": {
    "setup": "npm run setup:math && npm run setup:gl2 && npm run setup:tween && npm i",
    "setup:math": "cd src/lib/hwoa-rang-gl2/src/lib/hwoa-rang-math && npm i",
    "setup:gl2": "cd src/lib/hwoa-rang-gl2 && npm i",
    "setup:tween": "cd src/lib/hwoa-rangtween && npm i",
    "dev:main": "DEV=1 vite --host",
    "dev:math": "cd src/lib/hwoa-rang-gl2/src/lib/hwoa-rang-math && npm run start:dev",
    "dev:gl2": "cd src/lib/hwoa-rang-gl2 && npm run start:dev",
    "dev:tween": "cd src/lib/hwoa-rangtween && npm run start:dev",
    "build:math": "cd src/lib/hwoa-rang-gl2/src/lib/hwoa-rang-math && npm run start:build",
    "build:gl2": "cd src/lib/hwoa-rang-gl2 && npm run start:build",
    "build:tween": "cd src/lib/hwoa-rangtween && npm run start:build",
    "dev": "npm run build:math && npm run build:gl2 && npm run build:tween && npm run dev:main",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "del-cli": "^4.0.1",
    "eslint": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "vite": "^2.8.0",
    "vite-plugin-glsl": "^0.0.9"
  },
  "dependencies": {
    "copy": "^0.3.2",
    "ktx-parse": "^0.2.2",
    "spectorjs": "^0.9.27",
    "tweakpane": "^3.0.7",
    "tweakpane-plugin-thumbnail-list": "^0.3.0"
  }
}
